        "name": "rpc",
        "repo": "stellar/stellar-rpc",
        "ref": "v25.0.0"
      },
      {
        "name": "horizon",
        "repo": "stellar/go",
        "ref": "horizon-v24.0.0",
        "options": {
          "pkg": "github.com/stellar/go/services/horizon"
        }
      },
      {
        "name": "friendbot",
        "repo": "stellar/go",
        "ref": "horizon-v24.0.0",
        "options": {
          "pkg": "github.com/stellar/go/services/friendbot"
        }
      },
      {
        "name": "lab",
        "repo": "stellar/laboratory",
        "ref": "main"
      }
    ],
    "tests": {
      "continue-on-error": false,
      "additional-tests": [
        {
          "arch": "amd64",
          "network": "pubnet",
          "enable": "core,rpc,horizon"
